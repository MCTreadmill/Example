<?xml version="1.0" encoding="utf-8"?>

<!-- PreferenceScreen represents a top-level Preference that is the root of a Preference hierarchy. -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- PreferenceCategory is used to group Preference objects and provide a disabled title above the group. -->
    <PreferenceCategory
        android:title="General Settings"
        android:key="general_settings">




    </PreferenceCategory>
    <EditTextPreference
        android:title="@string/restaurant_name"
        android:textColor="@color/secondary_text"
        android:key="@string/edit_restaurant_name"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:inputType="text"/>

    <EditTextPreference
        android:title="@string/restaurant_address"
        android:textColor="@color/secondary_text"
        android:key="@string/edit_restaurant_address"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:inputType="text"/>

</PreferenceScreen>